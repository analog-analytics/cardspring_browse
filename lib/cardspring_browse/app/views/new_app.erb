<h2>New app</h2>

<form action="<%= post_url %>" method="post">
  <div class="field">
    <label for="auto_connect">Auto connect</label>
    <select  id="auto_connect" name="app[auto_connect]">
      <option value="all">All</option>
      <option value="business">Business</option>
      <option value="user" selected>User</option>
    </select>
  </div>

  <div class="field">
    <label for="notification_type">Notification types</label>
    <input  id="notification_type" type="text" name="app[notification[type]]" value="settlement_events" />
  </div>

  <div class="field">
    <label for="notification_count">Notification count</label>
    <input  id="notification_count" type="number" name="app[notification[count]]" value="0" />
  </div>

  <input type="submit" />
</form>

<a href="<%= back_url %>">Back</a>
